<h1> Codeial / <%=title %></h1>
<section id="feed-post">
        <h4> Posts</h4>
        <form action="/posts/create" id="new-post-form" method="POST">

                <textarea type="text" name="content" cols="30" rows="3" placeholder="Type your post here...">

                </textarea>

                <input type="submit" value="Post">
        </form>

        <div id="posts-container">
                <ul>
                        <% for(post of posts){ %>
                               <p>
                                <li><%=post.content %></li>
                                <small>
                                        <%= post.user.name %>
                                </small>

                               </p>
                        <%} %>
                </ul>
        </div>
</section>


